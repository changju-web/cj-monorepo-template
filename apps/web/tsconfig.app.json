{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* 应用代码特定配置 */
    "baseUrl": ".",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": [
      "vite/client",
      "element-plus/global",
      "@pureadmin/table/volar",
      "unplugin-icons/types/vue",
      "@pureadmin/descriptions/volar"
    ],

    /* 路径别名 */
    "paths": {
      "@/*": ["src/*"],
      "@build/*": ["build/*"]
    },

    /* Vite 特定配置 */
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "mock/**/*.ts",
    "types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
